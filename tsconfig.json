{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
